{
  "name": "adonis-on-fire",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "cd src && node ace build && cp .env.example ../build/.env",
    "deploy": "firebase deploy --only functions",
    "dev": "node ace serve --watch",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.ts --config src/.eslintrc.json",
    "logs": "firebase functions:log",
    "run": "cd build && node index.js",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell"
  },
  "engines": {
    "node": "16"
  },
  "main": "build/index.js",
  "dependencies": {
    "yargs": "^12.0.1",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "@adonisjs/auth": "^8.1.0",
    "@adonisjs/core": "^5.7.5",
    "@adonisjs/repl": "^3.1.10",
    "@adonisjs/session": "^6.2.0",
    "@adonisjs/shield": "^7.0.8",
    "@adonisjs/view": "^6.1.2",
    "@google-cloud/functions-framework": "^3.0.0",
    "firebase": "^8.6.8",
    "firebase-admin": "^9.10.0",
    "firebase-extra": "^0.4.2",
    "firebase-functions": "^3.15.4",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.6.2",
    "@japa/expect": "^1.1.4",
    "@japa/preset-adonis": "^1.0.15",
    "@japa/runner": "^2.0.7",
    "@symfony/webpack-encore": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.12.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.2.0",
    "pino-pretty": "^7.6.0",
    "prettier": "^2.6.2",
    "typescript": "^4.5.4",
    "youch": "^3.1.1",
    "youch-terminal": "^2.1.3"
  }
}
